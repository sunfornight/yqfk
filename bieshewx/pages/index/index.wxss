.header{width: 750rpx;height: 90rpx;background-color: #ffee6f}
.hdcon{display: flex; justify-content: space-between;height: 100%;}
.hdcon navigator, .hdcon .kefu{height: 50rpx;}
.kefu{position: relative;animation: dh 2s infinite linear alternate;}
.kefu .btn{position: absolute;width: 100%;height: 170%;top: 0;left: 0;opacity: 0;}
.hdcon image{height: 170%;}

.jianbianse{
  background:linear-gradient(135deg,#ffefba,#ffffff) ;
}

.banner{width: 100%;height: 295rpx; }
.banner swiper{width: 100%;height: 100%;}
.banner image{max-width: 100%;
  max-height: 100%; 
  display: block; 
  margin: auto;}

.major{white-space: nowrap;padding: 20rpx 0;}
/* .majorCon{display: flex; flex-wrap: nowrap;} */
.major .box{text-align: center;width: 170rpx;display: inline-block;}
.major .pic{width: 100rpx;height: 100rpx;}
.major .txt{font-size: 26rpx;margin-top: 8rpx;}

.pubTitle{display: flex;justify-content: space-between;height: 60rpx;align-items: center;margin-bottom: 40rpx;}
.pubTitle .txt{font-size: 40rpx;height: 100%;position: relative;padding-left: 20rpx;}
.pubTitle .txt::before{display: block;width: 8rpx;height: 32rpx;background: blue;content: " ";position: absolute;left: 0;top: 50%;margin-top: -15rpx;}
.pubTitle .more{font-size: 34rpx;color: #666;}

.works{background: #ffee6f;padding: 90rpx 0 70rpx;}
.wkMain{display: flex;flex-wrap: wrap;justify-content: space-between;}
.wkMain .box{width: 344rpx;height: 214rpx;margin-bottom: 10rpx;position: relative;}
.wkMain .pic{max-width: 100%;
  max-height: 100%; 
  display: block; 
  margin: auto;}
.wkMain .ceng{width: 100%;height: 100%;background: rgba(0,0,0,0.3);position: absolute;top:0;left: 0;color: white;text-align:center;display: flex;flex-direction: column;justify-content: center;align-items: center;padding: 0 20rpx;box-sizing: border-box;text-align: center;}
.wkMain .ceng .tit{font-size: 34rpx;}
.wkMain .ceng .line{width: 50rpx;height: 2rpx;background: white;margin: 10rpx 0 20rpx;}
.wkMain .ceng .des{opacity: 0.6;font-size: 24rpx;}

.dynamic{
  padding:90rpx 0 70rpx;
  background-color: #ffee6f;
}
.dyItem{display: flex; padding: 15rpx 0;border: 5rpx dashed #ffee6f;background-color: white;}
.dyItem .pic{width: 230rpx;height: 150rpx;}
.dyItem .pic image{width: 100%;height: 100%;}
.dyItem .txt{width: 440rpx;display: flex;flex-direction: column;justify-content: space-between;padding-left: 10rpx;}
.dyItem .title{font-size: 32rpx;}
.dyItem .info{font-size: 22rpx;color: #888;}
.dyItem .info text{font-size: 20rpx;}






.search{
    padding: 20rpx;
}
.search-text{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50rpx;
    color: #aaa;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 20rpx;
}
.search-text icon{
    margin-right: 10rpx;
}
swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 175rpx;
    height: 175rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}